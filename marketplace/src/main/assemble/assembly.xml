<project name="diff-assembly" default="build" xmlns:nx="urn:nuxeo-build" xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml" uri="urn:nuxeo-artifact" />

  <target name="build" description="Build Nuxeo Diff Marketplace package">
    <tstamp />
    <delete failonerror="false" dir="${maven.project.build.directory}/marketplace" />
    <mkdir dir="${maven.project.build.directory}/marketplace" />
    <copy todir="${maven.project.build.directory}/marketplace">
      <fileset dir="src/main/resources" />
      <filterset>
        <filter token="VERSION" value="${marketplace.diff.version}" />
        <filter token="DISTRIB_VERSION" value="${nuxeo.distribution.version}" />
      </filterset>
    </copy>
    <copy todir="${maven.project.build.directory}">
      <artifact:file key="org.nuxeo.ecm.distribution:nuxeo-distribution-cap::zip" />
      <artifact:file key="org.nuxeo.marketplace.diff:ear::zip" />
    </copy>
    <nx:zipdiff file1="${maven.project.build.directory}/ear-${marketplace.diff.version}.zip"
                file2="${maven.project.build.directory}/nuxeo-distribution-cap-${nuxeo.distribution.version}.zip"
                includesfile="${maven.project.build.directory}/includes"
                excludesfile="${maven.project.build.directory}/excludesfile"
                ignoreContent="true"
                ignoreContentPattern=".*SNAPSHOT\\.jar$"
                patternsetid="diff.versus.cap">
    </nx:zipdiff>
    <unzip src="${maven.project.build.directory}/ear-${marketplace.diff.version}.zip"
           dest="${maven.project.build.directory}/marketplace/install">
      <patternset refid="diff.versus.cap" />
    </unzip>

    <zip destfile="${maven.project.build.directory}/${maven.project.artifactId}-${marketplace.diff.version}.zip"
         basedir="${maven.project.build.directory}/marketplace" />
    <artifact:attach file="${maven.project.build.directory}/${maven.project.artifactId}-${marketplace.diff.version}.zip"
                     type="zip" />
  </target>

</project>
